<% if (showCover == true) { %>
  <div class="cover-wrapper">
    <a class="github-fork" href="https://github.com/yangyufeng96" style="position: fixed;z-index: 11;right: 0;top: 0;" >
      <img width="149" height="149" src="https://github.blog/wp-content/uploads/2008/12/forkme_right_white_ffffff.png?resize=149%2C149" class="attachment-full size-full" alt="Fork me on GitHub" data-recalc-dims="1">
    </a>
    <cover class='cover <%- page.layout %> <%- is_home() ? theme.cover.height : "half" %>'>
      <% if (theme.cover.scheme == 'search') { %>
        <%- partial('../_cover/search') %>
      <% } %>
    </cover>
    <%- partial('header', null, {cache: false, path: path}) %>
  </div>
<% } else { %>
  <%- partial('header', null, {cache: false, path: path}) %>
<% } %>
